<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/nameItemTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Ron"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreItemTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score: 10"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateItemTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 24/07/2022"
                android:textAlignment="textEnd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/locationItemTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: 46.9, 28.66"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>